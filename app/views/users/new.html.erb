<div class="column col-md-6 col-md-offset-3 form-div">
  <div class="row col-md-12">
    <div class="col-md-12 form-title">
      <h2>Create New Account</h2>
    </div>
  </div>

  <div class="well col-md-12 form-well" id="new-user-form">
    <%= bootstrap_form_for(@user) do |f| %>
      <%= f.text_field :username %>
      <%= f.email_field :email %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <div class="row col-md-12">
        <div class="col-md-12 form-button" id="sign_up">
          <%= f.submit "Sign Up" %>
        </div>
      </div>
    <% end %>
  </div>
</div>