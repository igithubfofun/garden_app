<div class="container">
	<div class="row">
		<div class="col-md-6">

			<h1 class="body_title"><%= current_user.first_name %>'s Gardens</h1>
			<p>About Me: <%= current_user.about_me %></p>
		</div>
		<div class="col-md-3">
		<button class="btn bth-primary btn-lg"><%= link_to "Create New Garden", new_garden_path %></button>
		</div>
	</div>
</div>

<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <% if @user.gardens.any? %>
      <h3>Gardens (<%= @user.gardens.count %>)</h3>
      <ol class="gardens">
        <%= render @gardens %>
      </ol>
      <%= will_paginate @gardens %>
    <% end %>
  </div>
</div>


