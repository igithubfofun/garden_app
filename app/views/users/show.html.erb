<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<div>
				<%= image_tag(@user.avatar_url, :id => "avatar") %>
			</div>
		</div>
		<div class="col-md-6">
			<h1><%= @user.first_name %>'s Gardens</h1>
			<p>About Me: <%= @user.about_me %></p>
		</div>
		<div class="col-md-3">
			<button class="btn">Add New Garden</button>
		</div>
	</div>
</div>

<!-- Grid -->
<div class="container">
  <div class="row">

    <div class="span12">
      <div class="hero-unit">
		    <div class="col-md-4 col-md-offset-4">
			    <div id="myCarousel" class="carousel">
	          <div class="carousel-inner">
	            <div class="active item"><%= image_tag("sample-garden.jpg") %></div>
			        <div class="item"><%= image_tag("sample-garden2.jpg") %></div>
			        <div class="item"><%= image_tag("sample-garden3.jpg") %></div>
	          </div>

		      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	        </div>
	      </div>

	      </div>
	    </div>
    </div>
  </div>
  <div class="row">
		<div class="well col-md-12 form-well" id="new-garden-form">
	    <%= bootstrap_form_for(@garden) do |f| %>
	      <%= f.text_field :name %>
	      <%= f.text_field :address %>
	      <%= f.text_field :city %>
	      <%= f.number_field :zip %>
	      <div class="row col-md-12">
	        <div class="col-md-12 form-button" id="create_garden">
	          <%= f.submit "Create Garden" %>
	        </div>
	      </div>
	    <% end %>
	  </div>
  </div>
</div>