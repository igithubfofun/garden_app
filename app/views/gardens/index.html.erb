<p id="notice"><%= notice %></p>

<h1 class="body_title">Your Gardens:</h1>

<div class="col-md-offset-9 col-md-3">
    <button class="btn bth-primary btn-lg"><%= link_to "Create New Garden", new_garden_path %></button>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gardens.each do |garden| %>
      <tr>
        <td><%= link_to 'Show', garden %></td>
        <td><%= link_to 'Edit', edit_garden_path(garden) %></td>
        <td><%= link_to 'Destroy', garden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


